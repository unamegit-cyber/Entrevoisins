<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_neighbour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBckGrey"
    tools:context=".ui.DetailNeighbourActivity">

        <FrameLayout
            android:id="@+id/item_detail_frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/item_detail_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="start|top"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/item_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="220dp"
                    android:textSize="40dp"
                    android:textColor="@color/colorTextWhite" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/item_detail_frame2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_shape"
            app:layout_constraintTop_toBottomOf="@id/item_detail_frame1"
            app:layout_constraintStart_toStartOf="@id/item_detail_frame1"
            app:layout_constraintEnd_toEndOf="@id/item_detail_frame1">

                <TextView
                    android:id="@+id/item_detail_name2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="TextView"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="25dp"
                    app:autoSizeTextType="none" />

                <View
                    android:id="@+id/item_detail_divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="50dp"
                    android:background="?android:attr/listDivider" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_baseline_fmd_good_50" />

                <TextView
                    android:id="@+id/item_detail_adresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextGrey"
                    android:layout_marginTop="67dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="10dp"
                    android:text="Adresse"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_detail_divider1"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_baseline_local_phone_50" />

                <TextView
                    android:id="@+id/item_detail_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextGrey"
                    android:layout_marginTop="117dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="10dp"
                    android:text="Telephone"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_baseline_alternate_email_50" />

                <TextView
                    android:id="@+id/item_detail_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextGrey"
                    android:layout_marginTop="167dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="10dp"
                    android:text="Web"
                    android:textSize="15dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/item_detail_frame3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_shape"
            app:layout_constraintTop_toBottomOf="@id/item_detail_frame2"
            app:layout_constraintStart_toStartOf="@id/item_detail_frame2"
            app:layout_constraintEnd_toEndOf="@id/item_detail_frame2">

                <TextView
                    android:id="@+id/item_detail_apropos"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="A propos de moi"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="25dp"
                    app:autoSizeTextType="none" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="50dp"
                    android:background="?android:attr/listDivider"/>

                <TextView
                    android:id="@+id/item_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorTextGrey"
                    android:text="Description"
                    android:textSize="15dp"
                    app:autoSizeTextType="none"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/item_detail_frame4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="275dp"
            app:layout_constraintTop_toTopOf="@id/item_detail_frame1"
            app:layout_constraintEnd_toEndOf="@id/item_detail_frame1">

                <ImageButton
                    android:id="@+id/item_detail_favoris_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_baseline_circle_60"
                    app:srcCompat="@drawable/ic_baseline_star_black_24" />

        </FrameLayout>

</android.support.constraint.ConstraintLayout>