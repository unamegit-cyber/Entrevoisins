<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.DetailNeighbourActivity">

        <ImageView
            android:id="@+id/item_detail_avatar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="start|top"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/item_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="220dp"
            android:textSize="40dp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toEndOf="@+id/item_detail_avatar"
            app:layout_constraintTop_toTopOf="@+id/item_detail_avatar" />

        <ImageButton
            android:id="@+id/item_detail_favoris_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="@+id/item_detail_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_detail_name"
            app:srcCompat="@drawable/ic_star_white_24dp" />

</android.support.constraint.ConstraintLayout>